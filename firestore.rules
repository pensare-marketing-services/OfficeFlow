
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to get a user's profile
      allow get: if request.auth != null;
      // Only allow a user to update their own profile
      allow update: if request.auth.uid == userId;
      // Allow any authenticated user to list all users for assignee dropdowns
      allow list: if request.auth != null;
    }
    
    // Rules for the 'tasks' collection
    match /tasks/{taskId} {
      // Allow any authenticated user to read (get, list) and write (create, update, delete) tasks.
      allow read, write: if request.auth != null;
    }
  }
}
